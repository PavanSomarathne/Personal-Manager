<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartEdit">

    <Button
        android:id="@+id/update_todo"
        android:layout_width="150dp"
        android:layout_height="49dp"
        android:layout_gravity="start"
        android:layout_marginStart="203dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="53dp"
        android:background="@drawable/rounded_button"
        android:enabled="true"
        android:fontFamily="@font/poppins_light"
        android:text="@string/up"
        android:textColor="#252525"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edstatus"
        app:layout_constraintVertical_bias="0.567" />

    <Button
        android:id="@+id/remove_todo"
        android:layout_width="108dp"
        android:layout_height="49dp"
        android:layout_gravity="start"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="239dp"
        android:layout_marginBottom="53dp"
        android:background="@drawable/rounded_button2"
        android:enabled="true"
        android:fontFamily="@font/poppins_light"
        android:text="@string/re"
        android:textColor="#252525"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.562" />

    <TextView
        android:id="@+id/textView54"
        android:layout_width="335dp"
        android:layout_height="54dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="649dp"
        android:fontFamily="@font/poppins_light"
        android:gravity="center"
        android:text="@string/addto"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="111dp"
        android:layout_height="34dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="294dp"
        android:layout_marginBottom="566dp"
        android:fontFamily="@font/poppins_light"
        android:text="@string/title"
        android:textColor="#1F1F1F"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="118dp"
        android:layout_height="41dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="199dp"
        android:layout_marginEnd="282dp"
        android:layout_marginBottom="494dp"
        android:fontFamily="@font/poppins_light"
        android:text="@string/category"
        android:textColor="#1F1F1F"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="88dp"
        android:layout_height="36dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="291dp"
        android:layout_marginBottom="281dp"
        android:fontFamily="@font/poppins_light"
        android:text="@string/price"
        android:textColor="#1F1F1F"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.194" />

    <EditText
        android:id="@+id/edtask"
        android:layout_width="216dp"
        android:layout_height="48dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="117dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="566dp"
        android:autofillHints=""
        android:ems="10"
        android:fontFamily="@font/poppins_light"
        android:inputType="textPersonName"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/edstatus"
        android:layout_width="212dp"
        android:layout_height="44dp"
        android:layout_marginStart="142dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="420dp"
        android:autofillHints=""
        android:ems="10"
        android:fontFamily="@font/poppins_light"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_paint_up"
        app:layout_constraintVertical_bias="0.129"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/edlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="153dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="494dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>